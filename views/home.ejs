<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta author="Prakriti | EE">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Karla:wght@500;600&display=swap" rel="stylesheet">

    <!-- font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- external css -->
    <link rel="stylesheet" href="../css/styles.css">

    <title>Events | Amalthea'21</title>

</head>

<body>
    <div class="amalthea navbar-brand m-bottom">
        <img src="../images/amalthea.png" class="d-inline-block logo" alt="amalthea logo">
        <div class="d-inline-block align-text-top title-color">Amalthea'21</div>
    </div>
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% for (var i=0; i < events.length; i++){ %>
                <div class="col">
                    <div class="card h-100">
                        <img src=<%=events[i].image %> class="card-img-top" alt="poster">
                        <div class="card-body">
                            <h3 class="card-title">
                                <%= events[i].name %>
                            </h3>
                            <p class="card-text">
                            <div class="d-grid gap-2 d-md-block">

                                <a href=<%=events[i].registration %> class="btn btn-outline-light button"
                                    type="button" target = "blank">Register
                                </a>
                                <a href=<%=events[i].rulebook %> target = "blank" class="btn btn-outline-light button"
                                    type="button">See
                                    Rulebook
                                </a>
                            </div>
                            </p>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>

    <div class="amalthea m-top text-center">
        <div class="row">
            <div class="col-sm-4 text-center socialicons">
                Follow us on
                <div class="socialicons text-center">
                    <a href="https://www.instagram.com/amalthea_iitgn/" aria-label="link" target="blank"><i
                            class="fa fa-instagram"></i></a>
                    <a href="https://www.linkedin.com/company/amalthea-iit-gandhinagar/?originalSubdomain=in"
                        aria-label="link" target="blank"><i class="fa fa-linkedin"></i></a>
                    <a href="https://www.facebook.com/amalthea.iitgn/" aria-label="link" target="blank"><i
                            class="fa fa-facebook"></i></a>
                    <a href="https://twitter.com/amalthea_iitgn?lang=en" aria-label="link" target="blank"><i
                            class="fa fa-twitter"></i></a>
                    <a href="https://www.youtube.com/user/AmaltheaIITGn" aria-label="link" target="blank"><i
                            class="fa fa-youtube-play"></i></a>
                </div>
            </div>
            <div class="col-sm-4">
                <a href="mailto:amalthea@iitgn.ac.in" aria-label="mail"><i
                        class="fa fa-envelope bg-transparent fa-2x"></i></a>
                <br>amalthea@iitgn.ac.in
            </div>

            <div class="col-sm-4">
                <br>
                Â© Amalthea'21
            </div>
        </div>
    </div>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>